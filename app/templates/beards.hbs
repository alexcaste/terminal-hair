{{#if newBeard}}

  {{partial 'beards/submit-beard'}}

{{else}}

  <div class="col-md-4">
  <button class="btn btn-info" {{action 'newBeard'}}>Submit Your Beard</button>
  <br>
  <br>
    <ul class="list-unstyled">
      {{#each beard in model}}
        <li><span class="muted">{{post-date beard.date}}</span>{{#link-to 'beard' beard.id}}<p class="lead">{{beard.name}}</p>{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>

  <h1>Hot Local Organic Beards</h1>
  {{#each beard in model}}
    <div class="col-md-3">
      {{#link-to 'beard' beard.id}}
        <div class="thumbnail" style="background-image: url({{beard.picture}})">
          <p class="lead text-center">
            {{beard.name}}
          </p>
        </div>
      {{/link-to}}
    </div>
  {{/each}}

{{/if}}

{{outlet}}
