<form>
    <div class="form-group">
      <label for="author" class="control-label">Your Name</label>
        {{input value=author type="text" class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="rating" class="control-label">Rating:</label>
      {{view "select" content=ratings value=selectedRating class="form-control" required="required"}}
    </div>
    <div class="form-group">
      <label for="body" class=" control-label">Your Thoughts</label>
        {{textarea value=body type="text" class="form-control" rows="4"}}
    </div>
  <button class="btn btn-primary btn-block "  {{action 'submitReview'}}>Submit Your Review</button>
</form>
